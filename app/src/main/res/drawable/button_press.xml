<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <!-- radius background of progressbar -->
            <corners android:radius="10dip" />
            <gradient
                android:startColor="#3B3131"
                android:centerColor="#3B3131"
                android:centerY="0.75"
                android:endColor="#5C5858"
                android:angle="270"
                />
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
            <stroke android:width="5px" android:color="#3B3131" />
        </shape>
    </item>
</layer-list>