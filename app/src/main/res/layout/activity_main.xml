<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.louise.test.MainActivity">

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_custom_main"
        android:text="開始遊戲"
        android:textSize="20dp"
        android:id="@+id/playgame"
        android:layout_below="@+id/profile"
        android:layout_alignLeft="@+id/profile"
        android:layout_alignStart="@+id/profile"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_custom_main"
        android:text="個人資料"
        android:textSize="20dp"
        android:id="@+id/profile"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/keeper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:id="@+id/keeper"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_custom_main"
        android:text="徽章成就"
        android:textSize="20dp"
        android:id="@+id/manual"
        android:layout_below="@+id/playgame"
        android:layout_alignLeft="@+id/playgame"
        android:layout_alignStart="@+id/playgame"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_custom_main"
        android:text="政大通訊"
        android:textSize="20dp"
        android:id="@+id/nccucontact"
        android:layout_above="@+id/getcoin"
        android:layout_toRightOf="@+id/playgame"
        android:layout_toEndOf="@+id/playgame"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_custom_main"
        android:text="獲得金幣"
        android:textSize="20dp"
        android:id="@+id/getcoin"
        android:layout_alignTop="@+id/playgame"
        android:layout_alignLeft="@+id/nccucontact"
        android:layout_alignStart="@+id/nccucontact" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_custom_main"
        android:text="遊戲設定"
        android:textSize="20dp"
        android:id="@+id/setting"
        android:layout_alignTop="@+id/manual"
        android:layout_alignLeft="@+id/getcoin"
        android:layout_alignStart="@+id/getcoin" />

</RelativeLayout>
