<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.louise.test.ProfileUpdateActivity">
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@drawable/border"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="team"
            android:id="@+id/teamname"
            android:layout_gravity="center_horizontal" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩家匿稱"
        android:textSize="20dp"
        android:id="@+id/keepername"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩家信箱"
        android:textSize="15dp"
        android:id="@+id/upemail"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="馬納值"
        android:textSize="20dp"
        android:id="@+id/keepervotes"
        android:layout_below="@+id/exp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遊戲等級"
        android:textSize="20dp"
        android:id="@+id/keeperlevel"
        android:layout_below="@+id/upemail"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="經驗數值"
        android:textSize="20dp"
        android:id="@+id/exp"
        android:layout_below="@+id/keeperlevel"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom_profile"
        android:textColor="#E5E4E2"
        android:text="更新資料"
        android:id="@+id/alertchange"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />


</RelativeLayout>
