<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.louise.test.PuzzleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜您是超原力使者!!!"
        android:textSize="45px"
        android:id="@+id/title_superpower"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="結果"
        android:textSize="40px"
        android:id="@+id/superpower"
        android:layout_below="@+id/iv_sp_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom_profile"
        android:text="釋放"
        android:textColor="#18E2AC"
        android:id="@+id/iv_sp_2"
        android:drawableLeft="@drawable/ic_flash_on_24dp"
        android:layout_below="@+id/title_superpower"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
